<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apiproyecto.CrudPlatos">
   
        <StackLayout>
        <Label Text="Platos a la Carta" FontSize="Title" Padding="30,10,30,10" HorizontalTextAlignment="Center"/>
        <Entry x:Name="txtId" Placeholder="ID" />
        <Entry x:Name="txtNombre" Placeholder="Nombre" />
        <Entry x:Name="txtPrecio" Placeholder="Precio" />
        <Entry x:Name="txtDisponible" Placeholder="Disponible" />
        <Entry x:Name="txtRestauranteId" Placeholder="Restaurante" />

        <Button Text="Insertar" Clicked="cmdInsert_Clicked"></Button>
        <Button Text="Modificar" Clicked="cmdUpdate_Clicked"></Button>
        <Button Text="Leer" Clicked="cmdReadOne_Clicked"></Button>
        <Button Text="Eliminar" Clicked="cmdDelete_Clicked"></Button>

        <Button Text="Regresar" Clicked="cmdRegresar_Clicked"></Button>
    </StackLayout>
  
</ContentPage>